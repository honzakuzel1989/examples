<UserControl x:Class="DependencyPropertyInitValue.CustomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DependencyPropertyInitValue"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="150">1</TextBox>
        <TextBox Grid.Column="1" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="150">2</TextBox>
    </Grid>
</UserControl>
